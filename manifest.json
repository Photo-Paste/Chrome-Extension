{
  "manifest_version": 3,
  "name": "PhotoPaste",
  "version": "1.0",
  "description": "Effortlessly share text between your phone and laptop. Simplify your cross-device text sharing experience today!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "action": {
    "default_popup": "create.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "467140296981-2sbft8pgn0icoivifpj2sv70dgtcrcuv.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }

}
